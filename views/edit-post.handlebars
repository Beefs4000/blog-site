{{> nav}}

<div class="container">
	<div class="row">
	    
	    <div>
	        
    		<h1 class="title is-4">Edit Post</h1>
    		
    		<form id="edit-post-form">
    		    
    		    <div class="field">
    		        <label class="label" for="title">Title</label>
    		        <input type="text" value="{{post.title}}" class="input" id="title" />
    		    </div>
    		    
    		    <div class="field">
    		        <label class="label" for="body">Body</label>
    		        <textarea class="textarea" id="body" >{{post.content}}</textarea>
    		    </div>
    		    
    		    
    		    <div class="form-group">
    		        <button type="submit" id="edit-btn" data-id="{{post.id}}" class="button is-black">
    		            Update
    		        </button>
    		    </div>
    		    
    		</form>
		</div>
		
	</div>
</div>
{{#if session.loggedIn}}

<script src="../js/log-out.js"></script>


{{/if}}
