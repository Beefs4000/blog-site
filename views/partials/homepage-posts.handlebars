<article class="message is-info">
  <div class="message-header">
    <p>Posted by: <strong>{{user.username}}</strong> at {{format_time createdAt}} on {{format_date createdAt}}</p>
  </div>
  <div class="message-body">
    <h5 class="title is-4">{{title}}</h5>
    {{content}}
  </div>
</article>

<a href="/post/{{id}}">
  <button class="button is-info is-inverted">
    View comments
  </button>
</a>